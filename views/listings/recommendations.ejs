<% layout("/layouts/boilerplate") %> 

<!-- Recommendations Section -->
<% for (let listing of recommendations) { %>
    <a href="/listings/<%= listing.listing._id %>" class="listing-link">
        <div class="card listing-card col">
            <% if (listing.listing.image) { %>
                <img src="<%= listing.listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <% } else { %>
                <img src="default-image-url.jpg" class="card-img-top" alt="default_image" style="height: 20rem;">
            <% } %>
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.listing.title %></b>
                    <br>
                    &#8377;<%= listing.listing.price.toLocaleString("en-IN") %> /night <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                </p>
            </div>
        </div>
    </a>
<% } %>

<!-- Toggle Tax Display -->
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckChecked");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            if (info.style.display != "none") {
                info.style.display = "none";
            } else {
                info.style.display = "inline";
            }
        }
    });
</script>
