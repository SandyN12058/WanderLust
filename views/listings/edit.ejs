<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

        
    <h2>Edit Listings</h2>      
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input name="listing[title]" value=<%=listing.title%> type="text" class="form-control" required>
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Title Required</div>
        </div>
          
        <div class="mb-3">
            <label for="description" class="form-label">Enter Description</label>
            <textarea name="listing[description]"  type="text" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Discription Required</div>
        </div>

        <div class="mb-3 editImg">
            <img src="<%= listing.image.url %>" />
        </div>

        <div class="mb-3">
            <label for="Image" class="form-label">Upload New Image</label>
             <input name="listing[image]" type="file" class="form-control"> 
            <div class="invalid-feedback">Image Required</div>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Enter Price</label>
                <input name="listing[price]" value=<%=listing.price%>  class="form-control" required>
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Enter Country</label>
                <input name="listing[country]" value=<%=listing.country%> type="text" class="form-control" required>
                <div class="invalid-feedback">country name required</div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Enter Location</label>
            <input name="listing[location]" value=<%=listing.location%> type="text" class="form-control" required>
            <div class="invalid-feedback">location required</div>
        </div>
        
        <br>
        <br>
        <button class="btn btn-dark edit-btn ">Edit</button>

    </form>
</div>
</div>