<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h2>Create New Listings</h2>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
            <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>  <!-- iss required ka mtlb woh likhe bina aage nahi bdh sakte  -->
            <div class="valid-feedback">Title Looks good!</div>
            <div class="invalid-feedback">Title Required</div>
        </div>
        

        <div class="mb-3">
            <label for="description" class="form-label">Enter Description</label>
            <textarea name="listing[description]" placeholder="Enter Description" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Discription Required</div>
        </div> 
        
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Attach Image</label>
            <input name="listing[image]" placeholder="Enter Image URL/Link" type="text" class="form-control" >
            <div class="invalid-feedback">Image Required</div>
        </div> -->

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control"  required >
        </div>
            
        <div class="row mt-3">
            <div class="mb-3 col-md-4"><!-- md is liye dala kyuki hum cahahate hai meddiuum y uk=ske baad hi prc and ctr ek line pe rhi=e -->
                <label for="price" class="form-label">Enter Price</label>
                <input name="listing[price]" placeholder="5000"  class="form-control" required>
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Enter country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">country name required</div>
            </div>
        </div>
        
        
        <div class="mb-3">
            <label for="location" class="form-label">Enter location</label>
            <input name="listing[location]" placeholder="Mumbai,Maharashtra" type="text" class="form-control" required>
            <div class="invalid-feedback">location required</div>
        </div>  

        <button class="btn btn-dark add-btn">Add</button>

    </form>
</div>
</div>
