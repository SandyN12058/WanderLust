<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on Wanderlust</h1>
    <div class="col-8 offset-2">
        <form action="/login" method="post" novalidate class="needs-validation">
            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Enter Username</label>
                <input name="username"
                 id="username"    
                 type="text" 
                 class="form-control" 
                 required>  <!-- iss required ka mtlb woh likhe bina aage nahi bdh sakte  -->
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Enter Password</label>
                <input name="password"
                 id="password"    
                 type="password" 
                 class="form-control" 
                 required>  <!-- iss required ka mtlb woh likhe bina aage nahi bdh sakte  -->
            </div>

            <!-- Submit button -->
             <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>